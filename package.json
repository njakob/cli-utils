{
  "name": "@njakob/cli-utils",
  "version": "0.0.0",
  "description": "Collection of utils to build CLI Node based applications",
  "author": "Nicolas Jakob <nicow.jakob@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/njakob/cli-utils",
  "repository": {
    "type": "git",
    "url": "git://github.com/njakob/cli-utils.git"
  },
  "bugs": {
    "url": "https://github.com/njakob/cli-utils/issues"
  },
  "keywords": [
    "cli",
    "utils"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && babel -d lib src",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "flow": "flow check",
    "test": "npm run lint && npm run flow",
    "bump:major": "npm version major -m \"Bump to %s\"",
    "bump:minor": "npm version minor -m \"Bump to %s\"",
    "bump:patch": "npm version patch -m \"Bump to %s\"",
    "prepublish": "npm run test && npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.18.0",
    "eslint-config-njakob": "^4.2.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.39.0",
    "rimraf": "^2.5.4"
  }
}
